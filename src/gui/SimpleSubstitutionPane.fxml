<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.SimpleSubstitutionController">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Alphabet" />
            <TextField fx:id="alphabetTextField" text="ZEBRASCDFGHIJKLMNOPQTUVWXY" />
         </children>
      </HBox>
      <TableView fx:id="mappingsTableView">
        <columns>
          <TableColumn fx:id="letterColumn" editable="false" prefWidth="75.0" style="-fx-alignment: center;" text="Letter" />
          <TableColumn fx:id="mappedToColumn" editable="false" prefWidth="75.0" style="-fx-alignment: center;" text="Mapped to" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
